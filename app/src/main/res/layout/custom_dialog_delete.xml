<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_delete_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_delete_name"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:textColor="@color/dialog_delete_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_delete_names"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/text_delete_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:textColor="@color/dialog_delete_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_delete_names"/>

    <TextView
        android:id="@+id/vertical_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/dividers_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_delete_names" />

    <TextView
        android:id="@+id/btn_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/text_no"
        android:gravity="center"
        android:textColor="@color/btn_text_gray"
        android:textSize="18sp"
        android:fontFamily="@font/abhaya_libre"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btn_yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vertical_divider" />

    <TextView
        android:id="@+id/horizontal_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/dividers_color"
        app:layout_constraintEnd_toStartOf="@id/btn_yes"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintTop_toBottomOf="@id/vertical_divider"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btn_yes"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/text_yes"
        android:textColor="@color/btn_text_gray"
        android:textSize="18sp"
        android:fontFamily="@font/abhaya_libre"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintTop_toBottomOf="@id/vertical_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>